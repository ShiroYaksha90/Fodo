<div align="center">
  <% @users.each do |user| %>
    <ul class="listing">
      <div class="row d-block">
        <div class="card col-10 col-sm-8 col-md-6 gap-1 p-2 align-self-center">
          <li class="align-self-center"><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class="chef-title"><%= link_to user.name.capitalize, 
                                         user_path(user) %></li>
    <li><small><%= pluralize(user.recipes.count, "recipe") if user.recipes %>
            </small></li>
        <li class="col-4 col-sm-4 align-self-center">
          <% if logged_in? and current_user.admin? && !user.admin? %>
            <%= button_to 'Delete', user, method: :delete, data: { confirm: "Are you sure you want to delete this Chef"}, class: 'btn btn-danger btn-sm btn-bg text-white w-100' %>
          <%end%>
        </li>
        </div>
      </div>
    </ul>      
  <% end %>
</div>