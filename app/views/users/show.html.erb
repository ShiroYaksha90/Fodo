<%= render 'shared/page_title', title: "#{@user.name}'s Profile"%>

<div class="row">
  <div class="col d-flex justify-content-center my-3">
    <%= gravatar_for @user%>
  </div>
</div>
<% if @user.recipes.count != 0 %>
  <h4 align="center"><%= @user.name.capitalize%>'s recipes</h4>
<%= paginate @user_recipes, theme: 'my_custom_theme', window: 3 %>
  <%= render 'recipes/recipe', obj: @user_recipes%>
<%= paginate @user_recipes, theme: 'my_custom_theme', window: 3 %>
<% else %>
  <h4 align="center">No recipes yet</h4>
<%end%>