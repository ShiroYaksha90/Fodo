<%= render 'shared/page_title', title: 'Log in' %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(:session, :html=>{class: 'form-horizantal', role: 'form'}) do |f| %>
        <div class="form-group row">
            <div class="control-label col-lg-1">
                <%= f.label :Email, class: 'fw-bold match-color' %>
            </div>
            <div class="col-md-8">
                <%= f.email_field :email, rows: 10, placeholder: 'Enter Email', class: 'form-control' %>
            </div>
        </div>
        <div class="form-group row">
            <div class="control-label col-lg-1">
                <%= f.label :Password, class: 'fw-bold match-color' %>
            </div>
            <div class="col-md-8">
                <%= f.password_field :password, placeholder: 'Enter Password', class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="offset-lg-1 col-md-10">
                <%= f.submit "Submit", class: "btn btn-danger btn-lg btn-bg" %>
            </div>
        </div>
        <% end %>
        <div class='col-md-4 offset-1 fs-5'>
            [ <%= link_to 'Back', root_path, class: 'match-color back-link' %> ]
        </div>
        <div class='offset-1 fs-5'>
            [ <%= link_to "Don't have an account? Sign up!", signup_path, class: 'match-color back-link' %> ]
            </div>
    </div>
</div>