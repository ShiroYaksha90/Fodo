<%= render 'shared/page_title', title: 'Showing all Recipes'%>

<% @recipes.each do |recipe|%>
    <div class="row recipe-container">
        <div class="col-md-2">
            <section class="user-info center">
                <%= link_to gravatar_for(recipe.user, size: 100), recipe_path(recipe) %>
            </section>
        </div>
        <div class="col-md-8 card mb-3 bg-light bg-gradient border border-success">
            <div class="card-body">
                <h2 class="card-title"><%= link_to recipe.name, recipe %></h2>
                <p class="card-text"><%= truncate(recipe.description, length: 150) %></p>
                <p class="card-text">
                    <span class="quiet"><small>Created <%= time_ago_in_words(recipe.created_at)%> ago</small></span>
                </p>
                <p class="card-text"><%= link_to "Show", recipe %></p>
                <p class="btn btn-outline-success btn-sm btn-bg"><%= link_to "Edit", edit_recipe_path(recipe) %></p>
                <p class="btn btn-outline-success btn-sm btn-bg"><%= link_to "Destroy", recipe, method: :delete, data: { confirm: 'Are you sure?' } %></p>
                </div>
        </div>
    </div>

<% end %>