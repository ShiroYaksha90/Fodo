<%= render 'shared/page_title', title: 'Create Recipe'%>
<% if @recipe.errors.any? %>
<div class="row my-3">
    <div class="col-md-8 offset-2">
        <div class="card bg-danger bg-opacity-25">
            <div class="card-body">
                <h2 class="card-title text-danger">
                <%= pluralize(@recipe.errors.count, 'error')%>
                Prevented this <%= @recipe.class%> from being saved:
                </h1>
                <ol>
                    <% @recipe.errors.full_messages.each do |error|%>
                    <li class="text-danger"><%= error%></li>
                    <%end%>
                </ol>
            </div>
        </div>
    </div>
</div>
<%end%>
<div class="row">
    <div class="col-md-12">
        <%= form_for(@recipe, :html=>{class: 'form-horizantal', role: 'form'}) do |f| %>
        <div class="form-group row">
            <div class="control-label col-sm-1">
                <%= f.label :Title, class: 'fw-bold match-color'%>
            </div>
            <div class="col-md-8">
                <%= f.text_field :name, placeholder: 'Recipe Name', class: 'form-control' %>
            </div>
        </div>
        <div class="form-group row">
            <div class="control-label col-sm-1">
                <%= f.label :Description, class: 'fw-bold match-color' %>
            </div>
            <div class="col-md-8">
                <%= f.text_area :description, rows: 10, placeholder: 'Enter Steps', class: 'form-control' %>
            </div>
        </div>
        <div class="form-group">
            <div class="offset-md-1 col-md-10">
                <%= f.submit "Create", class: "btn btn-danger btn-lg btn-bg col-3" %>
            </div>
        </div>
        <% end %>
        <div class='col-md-4 offset-1 fs-4'>
            [ <%= link_to 'Back', recipes_path, class: 'match-color back-link' %> ]
        </div>
    </div>
</div>